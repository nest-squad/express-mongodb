{
  "extends": ["airbnb/legacy", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "comma-spacing": [2, { "before": false, "after": true }],
    "eqeqeq": 1,
    "func-names": 0,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "key-spacing": [2, { "align": "colon" }],
    "keyword-spacing": [2, { "before": true, "after": true }],
    "max-len": 0,
    "no-shadow": 0,
    "no-bitwise": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-multi-spaces": 2,
    "no-spaced-func": 2,
    "no-throw-literal": 2,
    "no-trailing-spaces": 2,
    "no-undef": 2,
    "no-unneeded-ternary": 2,
    "class-methods-use-this": 0,
    "no-unreachable": 2,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 2,
    "consistent-return": 0,
    "no-unused-vars": [
      1,
      { "vars": "local", "args": "none", "ignoreRestSiblings": true }
    ],
    "no-param-reassign": [2, { "props": false }],
    "no-use-before-define": [1, "nofunc"],
    "no-var": 1,
    "no-loop-func": 2,
    "object-curly-spacing": [2, "always"],
    "one-var": [0, "never"],
    "one-var-declaration-per-line": [2, "always"],
    "padded-blocks": 0,
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "space-in-parens": [2, "never"],
    "spaced-comment": [2, "always"],
    "strict": ["error", "never"],
    "quote-props": ["error", "as-needed"],
    "quotes": ["error", "double"],
    "wrap-iife": [2, "outside"],
    "object-curly-newline": 0,
    "global-require": 0,
    "semi": ["error", "always"],
    "camelcase": 0
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "mocha": true,
    "jquery": true
  },
  "globals": {
    "by": true,
    "browser": true,
    "element": true,
    "inject": true,
    "io": true,
    "moment": true,
    "Promise": true,
    "_": false,
    "___dirname": true
  },
  "parser": "@typescript-eslint/parser"
}
