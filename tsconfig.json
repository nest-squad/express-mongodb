{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "rootDir": "./src",                      
    "outDir": "./build",                      
    "removeComments": true,                
    "strict": true,                           
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": false,                    
    "forceConsistentCasingInFileNames": true  
  },
  "exclude": [
    "./node_modules**/**",
  ]
}
